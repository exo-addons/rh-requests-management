    <edit-permission>*:/platform/administrators</edit-permission>
    <show-max-window>false</show-max-window>
    <portlet-application>
       <portlet>
          <application-ref>rh-management</application-ref>
          <portlet-ref>RHRequestManagementControllerPortlet</portlet-ref>
       </portlet>
      <access-permissions>Everyone</access-permissions>
       <show-info-bar>false</show-info-bar>
    </portlet-application>
  </page>

    <page>
        <name>rh-administration</name>
        <title>rh-administration</title>
        <access-permissions>*:/rh-managers</access-permissions>
        <edit-permission>*:/platform/administrators</edit-permission>
        <show-max-window>false</show-max-window>
        <portlet-application>
            <portlet>
                <application-ref>rh-management</application-ref>
                <portlet-ref>RhAdministrationControllerPortlet</portlet-ref>
            </portlet>
            <access-permissions>*:/rh-managers</access-permissions>
            <show-info-bar>false</show-info-bar>
        </portlet-application>
    </page>

